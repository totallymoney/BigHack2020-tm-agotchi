{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@common/*": ["../common/*"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
